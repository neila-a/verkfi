    "version": "0.2.0",
    "configurations": [
        {
            "type": "vscode-edge-devtools.debug",
            "request": "attach",
            "name": "Attach to Microsoft Edge and open the Edge DevTools",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "command": "git push",
            "name": "Run Git Push",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "针对 localhost:3000 启动 Edge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "cwd": "${workspaceFolder}",
            "name": "npm run dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithEdge"
            }
        }
    ]
}